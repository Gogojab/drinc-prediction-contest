<div id="purchase" class="span7">
  <form action="confirm_purchase" method="post">
    <p>Stock to buy:</p>
    <select name="stock">
      #for $i, $stock in enumerate($stocks)
      <option>$stock</option>
      #end for
    </select>
    <p>Pounds to spend:</p>
    <input type="number" name="cost" value="" size="8" maxlength="6"/>
    <p>
      <input type="submit" value="Submit"/>
      <input type="submit" name="cancel" value="Cancel"/>
    </p>
  </form>
</div>
