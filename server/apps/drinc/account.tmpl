<div id="account" class="span7">
  <h2>Your account</h2>
  <h3>Transactions</h3>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Stock</th>
        <th>Purchase price (p)</th>
        <th>Amount spent (&pound;)</th>
        <th>Value (&pound;)</th>
      </tr>
    </thead>
    <tbody>
      #for $i, $transaction in enumerate($transactions)
      <tr>
        <td>$transaction.stock</td>
        <td>$transaction.price</td>
        <td>$transaction.cost</td>
        <td>$transaction.value</td>
      </tr>
      #end for
    </tbody>
    <tfoot>
      <tr>
        <td></td>
        <td></td>
        <td>$spent</td>
        <td>$total</td>
      </tr>
    </tfoot>
  </table>
  <h3>Balance</h3>
  <p>You have &pound;$cash cash.</p>
  #if $cash > 0 and len($transactions) < 3
  <h3>Buy</h3>
  <p>
    Click <strong><a href=purchase>here</a></strong> to buy.  Unspent money isn't worth anything!
  </p>
  #end if
</div>
