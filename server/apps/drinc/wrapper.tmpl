#def navigationList
<ul class="nav">
  <li class="active"><a href="home">Home</a></li>
#if $past_deadline
  <li><a href="account">Accounts</a></li>
  <li><a href="analysis">Analysis</a></li>
#end if
</ul>
#end def

#def extra_script_source
#end def

#def extra_script
#end def

<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <link rel="stylesheet" href="bootstrap.css">
    <title>DRINC Prediction Contest</title>
  </head>
  <body>
    <div id="heading" class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="#">DRINC Prediction Contest</a>
          $navigationList
        </div>
      </div>
    </div>
    <div class="row-fluid" style="padding-top: 40px;">
      <div id="stocks" class="span2">
        <table class="table table-condensed table-striped table-hover">
          <thead>
            <tr>
              <th>Ticker</th>
              <th>Price (p)</th>
            </tr>
          </thead>
          <tbody>
            #for $ticker in $tickers
            <tr>
              <td>
                <a href="https://www.google.co.uk/finance?q=$ticker.ticker" rel="tooltip" data-placement="right" title="$ticker.full_name">
                  $ticker.ticker
                </a>
              </td>
              <td>$ticker.price</td>
            </tr>
            #end for
          </tbody>
        </table>
      </div>
      <div class="span10">
        <div class="row-fluid">
          $inner
          <div id="standings" class="span3">
            <h2>Standings</h2>
            <table class="table table-condensed table-striped table-hover">
              <thead>
                <tr>
                  <th>Member</th>
                  <th>Value (&pound;)</th>
                </tr>
              </thead>
              <tbody>
                #for $user in $users
                <tr>
#if $past_deadline
                  <td><a href="account?user=$user.initials">$user.initials</a></td>
#else
                  <td>$user.initials</td>
#end if
                  <td>$user.value</td>
                </tr>
                #end for
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <script type="text/javascript" src="jquery.js"></script>
    <script type="text/javascript" src="bootstrap.js"></script>
    $extra_script_source

    <script type="text/javascript">
    ## Make rows clickable.
    \$('#stocks tr').click(function() { window.location.href = \$(this).find('a').attr('href'); });
#if $past_deadline
    \$('#standings tr').click(function() { window.location.href = \$(this).find('a').attr('href'); });
#end if

    ## Enable tooltips on the stocks list.
    \$('#stocks a').tooltip()

    ## Page-specific script.
    $extra_script
    </script>
  </body>
</html>
