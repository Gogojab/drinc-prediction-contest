#from wrapper import wrapper
#extends wrapper

#def navigationList
      <ul class="nav navbar-nav">
        <li><a href="home">Home<span class="sr-only">(current)</span></a></li>
        <li class="active"><a href="account">Accounts</a></li>
#if $past_deadline
        <li><a href="analysis">Analysis</a></li>
#end if
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="settings">Settings</a></li>
        <li><p class=navbar-text><span class="label label-primary">$member</span></p></li>
      </ul>
#end def

#attr $inner_id = "account"
#def inner
<h2>$member's account</h2>
<h3>Transactions</h3>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Stock</th>
      <th>Purchase price (p)</th>
      <th>Amount spent (&pound;)</th>
      <th>Value (&pound;)</th>
    </tr>
  </thead>
  <tbody>
    #for $transaction in $transactions
    <tr>
      <td>$transaction.stock</td>
      <td>$transaction.price</td>
      <td>$transaction.cost</td>
      <td>$transaction.value</td>
    </tr>
    #end for
  </tbody>
  <tfoot>
    <tr>
      <td></td>
      <td></td>
      <td>$spent</td>
      <td>$total</td>
    </tr>
  </tfoot>
</table>
<form action="account" method="get" class="form-inline">
  <p>Show
  <select name="member" class="input-small">
    #for $option in $members
    #if $option == $member
      <option selected="selected">$option</option>
    #else
      <option>$option</option>
    #end if
    #end for
  </select>
  's account
</form>
#end def

#def extra_script
\$("select").change(function() { \$(this).closest("form").submit(); })
#end def
