#def navigationList
      <ul class="nav navbar-nav">
        <li><a href="home">Home<span class="sr-only">(current)</span></a></li>
        <li><a href="account">Accounts</a></li>
#if $past_deadline
        <li><a href="analysis">Analysis</a></li>
